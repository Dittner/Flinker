{
  "compilerOptions": {
    "outDir": "./dist/esm",
    "module": "esnext",
    "target": "es2020",
    "types": ["node", "jest"],
    //"lib": ["es6", "dom", "es2016", "es2017"],
    "allowJs": false,
    "jsx": "react",
    "declaration": true,
    "declarationDir": "./dist/types",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "allowImportingTsExtensions": false,
    "noImplicitAny": false,
    "esModuleInterop": true,
    "noEmit": false,
  },
  "include": [
    "src/rx"
  ],
  "exclude": ["node_modules", "build"]
}

