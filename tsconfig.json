{
  "compilerOptions": {
    "outDir": "./dist/cjs",
    "module": "esnext",
    "target": "es5",
    "types": ["node", "jest"],
    "lib": ["es6", "dom", "es2016", "es2017"],
    "jsx": "react",
    "declaration": true,
    "declarationDir": "./dist",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "allowImportingTsExtensions": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "noEmit": true,
  },
  "include": [
    "src/rx"
  ],
  "exclude": ["node_modules", "build"]
}

